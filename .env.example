# .env.example (ATUALIZAR)

# Database Configuration
DATABASE_URL=sqlite:///./tamarai.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=sua_chave_openai_aqui
OPENAI_MODEL=gpt-4

# Application Settings
SECRET_KEY=tamarai-secret-key-change-in-production
DEBUG=true

# Directories
STATIC_DIR=static
UPLOAD_DIR=uploads
PDF_OUTPUT_DIR=static/pdfs

# File Limits
MAX_FILE_SIZE=31457280
MAX_FILES_PER_CHAT=5

# Cache TTL (seconds)
CACHE_TTL_JURISPRUDENCIA=86400
CACHE_TTL_AI_RESPONSE=3600